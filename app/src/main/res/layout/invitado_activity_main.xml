<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.monitor.dsmeteo1.InvitadoActivity">


    <ImageView
        android:id="@+id/imageViewIconos"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="82dp"
        app:srcCompat="@drawable/icono0"
        android:layout_below="@+id/Ciudad"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="Ciudad"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/MinMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Max"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:layout_below="@+id/imageViewIconos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />
</RelativeLayout>
